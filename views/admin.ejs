<%- include('./partials/admin-header') %>
    <div class="w-full min-h-screen flex items-start px-20 py-10">
        <div class="w-[25%] flex flex-col items-start pr-10">
            <div class="flex flex-col">
                <a class="block w-fit mb-2 font-bold text-blue-500" href="/owners/admin">All Products</a>
                <a class="block w-fit mb-2" href="/owners/admin/create">Create new product</a>
            </div>
        </div>
        <div class="w-[75%] flex flex-col gap-5">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-2xl font-semibold">All Products</h2>
                <a class="px-4 py-2 text-red-500 border border-red-500 rounded hover:bg-red-500 hover:text-white transition" href="/products/delete-all">Delete All</a>
            </div>

            <% if(products.length === 0) { %>
                <div class="text-center py-20 bg-gray-50 rounded-lg">
                    <i class="ri-shopping-bag-line text-6xl text-gray-300"></i>
                    <p class="text-xl text-gray-500 mt-4">No products available</p>
                    <a href="/owners/admin/create" class="inline-block mt-4 px-6 py-2 bg-blue-500 text-white rounded">Create First Product</a>
                </div>
            <% } else { %>
                <div class="bg-white rounded-lg shadow overflow-hidden">
                    <table class="w-full">
                        <thead class="bg-gray-100 border-b">
                            <tr>
                                <th class="px-4 py-3 text-left">Image</th>
                                <th class="px-4 py-3 text-left">Name</th>
                                <th class="px-4 py-3 text-left">Price</th>
                                <th class="px-4 py-3 text-left">Discount</th>
                                <th class="px-4 py-3 text-left">Colors</th>
                                <th class="px-4 py-3 text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(function(product){ %>
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="px-4 py-3">
                                        <div class="w-16 h-16 rounded bg-[<%= product.bgcolor %>] flex items-center justify-center">
                                            <img class="h-12 object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                                        </div>
                                    </td>
                                    <td class="px-4 py-3 font-medium"><%= product.name %></td>
                                    <td class="px-4 py-3">₹ <%= product.price %></td>
                                    <td class="px-4 py-3">
                                        <% if(product.discount > 0) { %>
                                            <span class="text-green-600">₹ <%= product.discount %></span>
                                        <% } else { %>
                                            <span class="text-gray-400">No discount</span>
                                        <% } %>
                                    </td>
                                    <td class="px-4 py-3">
                                        <div class="flex gap-1">
                                            <span class="w-6 h-6 rounded-full border" style="background-color: <%= product.bgcolor %>" title="Background"></span>
                                            <span class="w-6 h-6 rounded-full border" style="background-color: <%= product.panelcolor %>" title="Panel"></span>
                                            <span class="w-6 h-6 rounded-full border" style="background-color: <%= product.textcolor %>" title="Text"></span>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3">
                                        <div class="flex gap-2 justify-center">
                                            <a href="/products/edit/<%= product._id %>" class="px-3 py-1 bg-blue-500 text-white rounded hover:bg-blue-600">
                                                <i class="ri-edit-line"></i>
                                            </a>
                                            <a href="/products/delete/<%= product._id %>" class="px-3 py-1 bg-red-500 text-white rounded hover:bg-red-600" onclick="return confirm('Are you sure you want to delete this product?')">
                                                <i class="ri-delete-bin-line"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
<%- include('./partials/footer') %>