<%- include('./partials/admin-header') %>
<div class="w-full min-h-screen flex items-center justify-center px-4 py-10">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-semibold mb-6">Edit Product</h2>

            <form action="/products/edit/<%= product._id %>" method="POST" enctype="multipart/form-data" class="space-y-4">
                <!-- Product Image -->
                <div>
                    <label class="block text-sm font-medium mb-2">Product Image</label>
                    <div class="mb-3 p-4 bg-gray-100 rounded-lg flex items-center justify-center h-40">
                        <img class="h-32 object-contain" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                    </div>
                    <input type="file" name="image" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <small class="text-gray-500">Leave empty to keep current image</small>
                </div>

                <!-- Product Name -->
                <div>
                    <label class="block text-sm font-medium mb-2">Product Name</label>
                    <input type="text" name="name" value="<%= product.name %>" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Price -->
                <div>
                    <label class="block text-sm font-medium mb-2">Price (₹)</label>
                    <input type="number" name="price" value="<%= product.price %>" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Discount -->
                <div>
                    <label class="block text-sm font-medium mb-2">Discount (₹)</label>
                    <input type="number" name="discount" value="<%= product.discount %>" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>

                <!-- Colors Section -->
                <div class="border-t pt-4 mt-4">
                    <h3 class="font-semibold mb-3">Colors</h3>

                    <!-- Background Color -->
                    <div class="mb-3">
                        <label class="block text-sm font-medium mb-2">Background Color</label>
                        <div class="flex gap-2">
                            <input type="color" name="bgcolor" value="<%= product.bgcolor %>" class="w-16 h-10 rounded cursor-pointer">
                            <input type="text" name="bgcolor" value="<%= product.bgcolor %>" class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        </div>
                    </div>

                    <!-- Panel Color -->
                    <div class="mb-3">
                        <label class="block text-sm font-medium mb-2">Panel Color</label>
                        <div class="flex gap-2">
                            <input type="color" name="panelcolor" value="<%= product.panelcolor %>" class="w-16 h-10 rounded cursor-pointer">
                            <input type="text" name="panelcolor" value="<%= product.panelcolor %>" class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        </div>
                    </div>

                    <!-- Text Color -->
                    <div class="mb-3">
                        <label class="block text-sm font-medium mb-2">Text Color</label>
                        <div class="flex gap-2">
                            <input type="color" name="textcolor" value="<%= product.textcolor %>" class="w-16 h-10 rounded cursor-pointer">
                            <input type="text" name="textcolor" value="<%= product.textcolor %>" class="flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        </div>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="flex gap-3 pt-6">
                    <button type="submit" class="flex-1 bg-blue-500 text-white py-2 rounded-lg font-semibold hover:bg-blue-600 transition">
                        Update Product
                    </button>
                    <a href="/owners/admin" class="flex-1 bg-gray-500 text-white py-2 rounded-lg font-semibold hover:bg-gray-600 transition text-center">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include('./partials/admin-header') %>