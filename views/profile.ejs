<%- include('./partials/header') %>
    <div class="w-full min-h-screen flex items-start px-20 py-20">
        <div class="w-full max-w-4xl mx-auto">
            <h2 class="text-3xl font-semibold mb-8">My Account</h2>
            
            <!-- User Profile Section -->
            <div class="bg-white shadow-md rounded-lg p-8 mb-6">
                <div class="flex items-center mb-6">
                    <div class="w-20 h-20 rounded-full bg-blue-500 flex items-center justify-center text-white text-3xl font-bold">
                        <%= user.fullname.charAt(0).toUpperCase() %>
                    </div>
                    <div class="ml-6">
                        <h3 class="text-2xl font-semibold"><%= user.fullname %></h3>
                        <p class="text-gray-600"><%= user.email %></p>
                    </div>
                </div>

                <div class="border-t pt-6">
                    <h4 class="text-xl font-semibold mb-4">Profile Details</h4>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <p class="text-gray-600 text-sm">Full Name</p>
                            <p class="font-medium"><%= user.fullname %></p>
                        </div>
                        <div>
                            <p class="text-gray-600 text-sm">Email</p>
                            <p class="font-medium"><%= user.email %></p>
                        </div>
                        <div>
                            <p class="text-gray-600 text-sm">Contact</p>
                            <p class="font-medium"><%= user.contact || 'Not provided' %></p>
                        </div>
                        <div>
                            <p class="text-gray-600 text-sm">Account Status</p>
                            <p class="font-medium text-green-600">Active</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cart Summary Section -->
            <div class="bg-white shadow-md rounded-lg p-8 mb-6">
                <h4 class="text-xl font-semibold mb-4">Shopping Summary</h4>
                <div class="grid grid-cols-3 gap-4">
                    <div class="text-center p-4 bg-blue-50 rounded-lg">
                        <p class="text-3xl font-bold text-blue-600"><%= user.cart.length %></p>
                        <p class="text-gray-600 text-sm mt-1">Items in Cart</p>
                    </div>
                    <div class="text-center p-4 bg-green-50 rounded-lg">
                        <p class="text-3xl font-bold text-green-600"><%= user.orders.length %></p>
                        <p class="text-gray-600 text-sm mt-1">Total Orders</p>
                    </div>
                    <div class="text-center p-4 bg-purple-50 rounded-lg">
                        <p class="text-3xl font-bold text-purple-600">0</p>
                        <p class="text-gray-600 text-sm mt-1">Wishlist Items</p>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Section -->
            <div class="bg-white shadow-md rounded-lg p-8">
                <h4 class="text-xl font-semibold mb-4">Quick Actions</h4>
                <div class="grid grid-cols-2 gap-4">
                    <a href="/shop" class="flex items-center p-4 border rounded-lg hover:bg-gray-50 transition">
                        <i class="ri-shopping-bag-line text-2xl text-blue-500 mr-4"></i>
                        <div>
                            <p class="font-semibold">Continue Shopping</p>
                            <p class="text-sm text-gray-600">Browse our products</p>
                        </div>
                    </a>
                    <a href="/cart" class="flex items-center p-4 border rounded-lg hover:bg-gray-50 transition">
                        <i class="ri-shopping-cart-line text-2xl text-green-500 mr-4"></i>
                        <div>
                            <p class="font-semibold">View Cart</p>
                            <p class="text-sm text-gray-600"><%= user.cart.length %> items waiting</p>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Logout Button -->
            <div class="mt-6 text-center">
                <a href="/users/logout" class="inline-block px-8 py-3 bg-red-500 text-white rounded-lg hover:bg-red-600 transition">
                    <i class="ri-logout-box-line mr-2"></i>Logout
                </a>
            </div>
        </div>
    </div>
<%- include('./partials/footer') %>